#include <iostream>
#include <cmath>
using namespace std;

void ReadNumber(float &a, float &h)
{
	cout << "Please Enter A" << endl;
	cin >> a;

	cout << "Please Enter H" << endl;
	cin >> h;
}

float CalculateTringleArea(float a, float h)
{
	float area;
	area = (a/2) * h;
	return area;
}

void PrintResult(float Area)
{
	cout << "Area is: " << Area << endl;
}

int main()
{
	float a, h;
	ReadNumber(a, h);
	PrintResult(CalculateTringleArea(a, h));
}

