#include <iostream>
#include <cmath>
using namespace std;

void ReadNumber(int &r)
{
	cout << "Please Enter Radious (r) " << endl;
	cin >> r;
}

float CalculateCircleArea(int r)
{
	const float PI = 3.141592653589793238;
	float area;
	area = PI * (pow(r, 2));
	return area;
}

void PrintResult(float area)
{
	cout << "Circle area is: " << area << endl;
}

int main()
{
	int r ;
	ReadNumber(r);
	PrintResult(CalculateCircleArea(r));
}

