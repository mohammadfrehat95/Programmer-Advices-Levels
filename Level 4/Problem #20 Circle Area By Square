#include <iostream>
#include <cmath>
using namespace std;

void ReadNumber(int &A)
{
	cout << "Please Enter Circle Inscribed in a square (A) " << endl;
	cin >> A;
}

float CalculateCircleAreaBySquare(int A)
{
	const float PI = 3.141592653589793238;
	float area;
	area = (PI * pow(A, 2)) / 4;
	return area;
}

void PrintResult(float area)
{
	cout << "Circle area by square is: " << area << endl;
}

int main()
{
	int A;
	ReadNumber(A);
	PrintResult(CalculateCircleAreaBySquare(A));
}

