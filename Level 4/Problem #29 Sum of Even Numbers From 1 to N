#include <iostream>
using namespace std;

enum enOddOrEven { Odd = 1 , Even = 2 };

enOddOrEven OddOrEven(int Number)
{
	if (Number % 2 == 0)
		return enOddOrEven::Even;
	else
		return enOddOrEven::Odd;
}

int ReadNumber()
{
	int Number = 0;
	cout << "Please Enter N to print from N to 1" << endl;
	cin >> Number;

	return Number;
}

int CheckSum(int Number)
{
	int sum = 0;
	for (int i = 1; i <= Number; i++)
	{
		if (OddOrEven(i) == enOddOrEven::Even)
		{
			sum = sum + i;
		}
	}
	return sum;
}
void PrintRangeFromNto1(int n)
{
	cout << "The Numbers From 1 to N: \n";
	for (int i = 1; i <= n; i++)
	{
		cout << i << endl;
	}

	cout << "\nThe sum of Even Numbers is: \n" << CheckSum(n);
}

int main()
{
	int N = ReadNumber();
	PrintRangeFromNto1(N);
}

