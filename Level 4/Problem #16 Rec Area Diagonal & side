#include <iostream>
#include <cmath>
using namespace std;

void ReadNumber(float &a, float &d)
{
	cout << "Please Enter Side area" << endl;
	cin >> a;

	cout << "Please Enter Diagonal" << endl;
	cin >> d;
}

float CalculateArea(float a, float d)
{
	float area;
	area = a * (sqrt(pow(d, 2) - pow(a, 2)));
	return area;
}

void PrintResult(float Area)
{
	cout << "Area is: " << Area << endl;
}

int main()
{
	float a, d;
	ReadNumber(a, d);
	PrintResult(CalculateArea(a, d));
}

