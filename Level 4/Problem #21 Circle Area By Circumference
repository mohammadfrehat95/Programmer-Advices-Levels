#include <iostream>
#include <cmath>
using namespace std;

void ReadNumber(int &L)
{
	cout << "Please Enter l  " << endl;
	cin >> L;
}

float CalculateCircleAreaByCircumference(int L)
{
	const float PI = 3.141592653589793238;
	float area;
	area = pow(L, 2) / (4 * PI);
	return area;
}

void PrintResult(float area)
{
	cout << "Circle area by square is: " << area << endl;
}

int main()
{
	int L;
	ReadNumber(L);
	PrintResult(CalculateCircleAreaByCircumference(L));
}

