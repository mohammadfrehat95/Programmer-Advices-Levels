#include <iostream>
#include <cmath>
using namespace std;

void ReadNumber(int& a, int& b, int & c)
{
	cout << "Please Enter a " << endl;
	cin >> a;

	cout << "Please Enter b " << endl;
	cin >> b;

	cout << "Please Enter c " << endl;
	cin >> c;
}

float CalculateCircleAreaByArbitraryTringle(int a, int b,int c)
{
	const float PI = 3.141592653589793238;
	float area;
	float  p;
	p = (a + b + c) / 2;
	area = PI * pow(((a * b * c) / (4 * sqrt(p * (p - a) * (p - b) * (p - c)))),2);
	return area;
}

void PrintResult(float area)
{
	cout << "Circle area By Arbitrary Tringle Is: " << area << endl;
}

int main()
{
	int a, b,c;
	ReadNumber(a, b, c);
	PrintResult(CalculateCircleAreaByArbitraryTringle(a, b,c));
}

